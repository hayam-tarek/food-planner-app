<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <stroke android:width="2dp" android:color="?attr/colorPrimary" /> <!-- لون البوردر عند التركيز -->
            <corners android:radius="25dp" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="2dp" android:color="?attr/colorTertiary" /> <!-- لون البوردر العادي -->
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>